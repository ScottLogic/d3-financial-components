<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{default title 'd3fc'}}</title>
    <meta name="description" content="A collection of components that make it easy to build interactive charts with D3.">

    <script src="{{baseurl}}/lib/browser.js"></script>
    <script src="{{baseurl}}/lib/custom-event-polyfill.js"></script>
    <script src="{{baseurl}}/lib/d3.min.js"></script>
    <script src="{{baseurl}}/lib/jquery.min.js"></script>
    <script src="{{baseurl}}/lib/bootstrap.min.js"></script>
    <script src="{{baseurl}}/lib/d3fc.min.js"></script>
    <script src="{{baseurl}}/lib/d3-legend.min.js"></script>
    <link rel="icon" type="image/png" href="{{baseurl}}/images/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="{{baseurl}}/images/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="{{baseurl}}/images/favicon-96x96.png" sizes="96x96">
    <link rel="stylesheet" href="{{baseurl}}/styles.css" />
    <link rel="canonical" href="{{baseurl}}{{page.destination}}" />
  </head>
  <body>
    <div class="content">

      <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
              {{#isnt section 'homepage'}}
                <a href="{{baseurl}}/"><img class="navbar-logo" alt="d3fc" src="{{baseurl}}/images/logo.svg" /></a>
              {{/isnt}}
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div class="navbar-collapse collapse">
              <div class="floating-nav {{#isnt section 'homepage'}}inverted{{/isnt}}">
                <ul class="nav navbar-nav">
                  <li class="{{#is section 'introduction'}}active{{/is}}"><a href="{{baseurl}}/introduction/getting-started.html">Documentation</a></li>
                  <li class="{{#is section 'api'}}active{{/is}}">
                    <a href="{{baseurl}}/api/{{#first api}}{{name}}{{/first}}.html">API</a>
                    {{#is section 'api'}}
                      <ul class="sub-nav">
                        {{#each api}}
                          <li class="sub-nav-item">
                            {{#eq ../name name }}
                              <span class="active">{{title}}</span>
                            {{else}}
                              <a href="{{baseurl}}/api/{{name}}.html">{{title}}</a>
                            {{/eq}}
                          </li>
                        {{/each}}
                      </ul>
                    {{/is}}
                  </li>
                  <li class="{{#is layout 'example'}}active{{/is}}">
                    <a href="{{baseurl}}/examples/">Examples</a>
                    {{#is layout 'example'}}
                      <ul class="sub-nav">
                        {{#each pages}}
                          {{#if example }}
                            <li class="sub-nav-item">
                              <a class="{{#if isCurrentPage}}active{{/if}}" href="{{page.destination}}">{{title}}</a>
                            </li>
                          {{/if}}
                        {{/each}}
                      </ul>
                    {{/is}}
                  </li>
                  <li><a href="{{package.repository._homepage}}">GitHub</a></li>
                  <li class="separator"></li>
                </ul>
              </div>
            </div>
        </div>
      </nav>

      {{{body}}}

    </div>
    <footer>
      <div class="container">
        <p class="muted credit text-center">Project supported by <a href="http://www.scottlogic.com">Scott Logic</a>.</p>
      </div>
    </footer>
  </body>
</html>
