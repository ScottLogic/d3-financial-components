---
layout: default
---
<div class="container component">
  <div class="row">

    <div class="col-sm-9 col-xs-12">
      <h1>
        {{title}}
        {{#if component}}
        <a href="{{package.repository.url}}/blob/master/src/{{component}}">View source on GitHub</a>
        {{/if}}
      </h1>
      {{{body}}}
    </div>

    <nav class="col-sm-3 hidden-xs">
       <ul class="nav nav-stacked fixed nav-sidebar">
        {{#group pages by="data.namespace"}}
          <li>
            <h4>{{value}}</h4>
            <ul class="nav nav-stacked">
              {{#each items}}
                <li class="{{#if this.page.isCurrentPage}}active{{/if}}">
                  <a href="{{this.page.destination}}">
                    {{this.data.title}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </li>
        {{/group}}
      </ul>
    </nav>

  </div>
</div>
